{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "Creates framework necessary for SLS for Contact Form",
  "Parameters" : {
    "Project" : {
      "Description" : "Enter Project Name",
      "Type" : "String",
      "Default" : "Contact Serverless Base"
    }
  },
  "Resources": {
    "BuildBucket" : {
      "Type" : "AWS::S3::Bucket",
      "Properties" : {
        "Tags" : [
          { "Key" : "Name", "Value" : {"Fn::Join": ["", [{"Ref": "AWS::StackName"}, "-BuildBucket"]]}},
          { "Key" : "Project", "Value" : {"Ref": "Project"} }
        ]
      }
    },

    "CodeBuildPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "Roles": [
          {"Ref": "CodeBuildRole"}
        ],
        "PolicyName": "contactless-codebuildpolicy",

        "PolicyDocument" : {
          "Version" : "2012-10-17",
          "Statement" : [
            {
              "Action" : [
                "logs:*",
                "ssm:GetParameter",
                "cloudformation:DescribeStacks",
                "cloudformation:ListExports",
                "cloudformation:ListImports",
                "cloudformation:ListSTacks",
                "cloudformation:GetTemplateSummary",
                "s3:HeadBucket",
                "s3:ListAllMyBuckets",
                "route53:ListHostedZones",
                "cloudfront:UpdateDistribution",
                "iam:ListPolicies"
              ],
              "Resource" : "*",
              "Effect" : "Allow"
            },
            {
              "Action" : [
                "apigateway:*",
                "lambda:*"
              ],
              "Resource" : "*",
              "Effect" : "Allow"
            },
            {
              "Action" : [
                "s3:*",
              ],
              "Resource" : "*",
              "Effect" : "Allow"
            },
            {
              "Action" : [
                "route53:GetChange",
              ],
              "Resource" : "arn:aws:route53:::change/*",
              "Effect" : "Allow"
            },
            {
              "Action" : [
                "route53:GetChange",
                "route53:ChangeResourceRecordSets"
              ],
              "Resource" : "arn:aws:route53:::hostedzone/*",
              "Effect" : "Allow"
            },
            {
              "Action" : [
                "iam:GetRole",
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:PutRolePolicy",
                "iam:DeleteRolePolicy",
                "iam:PassRole",
                "iam:AttachRolePolicy"
              ],
              "Resource" : [
                {"Fn::Join": [":", [
                "arn:aws:iam:",
                {"Ref": "AWS::AccountId"},
                "role/contactless*"
                ]]},
                "*"
              ],
              "Effect" : "Allow"
            },
            {
              "Action" : [
                "cloudformation:*"
              ],
              "Resource": {"Fn::Join": [":", [
                "arn:aws:cloudformation",
                {"Ref": "AWS::Region"},
                {"Ref": "AWS::AccountId"},
                "stack/contactless*/*"
                ]]},
              "Effect" : "Allow"
            },
            {
              "Action" : [
                "cloudformation:CreateChangeSet"
              ],
              "Resource" : {"Fn::Join": [":", ["arn:aws:cloudformation", {"Ref": "AWS::Region"}, "aws:transform/Serverless-2016-10-31"]]},
              "Effect" : "Allow"
            }
          ]
        }
      }
    },




    "CodeBuildRole" : {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument" : {
          "Statement" : [
            {
              "Effect" : "Allow",
              "Principal" : {
                "Service" : [
                  "codebuild.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path" : "/"
      }
    },




    "ssmTravisCIConfig": {
      "Type" : "AWS::SSM::Parameter",
      "Properties" : {
        "Name" : "/travisci/contactless",
        "Description" : "Foundational Configuration",
        "Type" : "String",
        "Value" : {"Fn::Join": ["", ["{ \"build_bucket\": \"", {"Ref": "BuildBucket"}, "\"}"]]}
      }
    }


  },
  "Outputs": {
    "Project" : {
      "Description" : "The Project Name",
      "Value" : {"Ref": "Project"}
    }


  },

  "Metadata": {
    "AWS::CloudFormation::Interface" : {
      "ParameterGroups" : [
        {
          "Label" : { "default" : "Project Information"},
          "Parameters" : [ "Project" ]
        }
      ]
    }
  }
}
